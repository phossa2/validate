{
    "name": "phossa2/validate",
    "license": "MIT",
    "type": "library",
    "description": "A PHP validation proxy to various validate libraries.",
    "keywords": ["validate", "phossa"],
    "homepage": "https://github.com/phossa2/validate",
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phossa2"
        }
    ],
    "require": {
        "php": "~5.4|~7.0",
        "wixel/gump": "dev-master",
        "phossa2/shared": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-0": { "Phossa2\\Validate\\": "src/" }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs --standard=psr2 src/",
        "format": "phpcbf --standard=psr2 src/"
    },
    "replace": {
        "phossa/phossa-validate": "*"
    },
    "config": {
        "platform": {
            "php": "5.4.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "archive": {
        "exclude": [ "!vendor", "tests", "composer.lock" ]
    }
}
